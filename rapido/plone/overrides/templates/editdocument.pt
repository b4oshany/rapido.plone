<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="rapido.plone">
<body>

<metal:main fill-slot="content-core">
  <metal:content-core define-macro="content-core">

    <form method="POST" tal:attributes="
        name view/doc/form/id;
        action string:${view/doc/url}/save;
        ">
      <input type="hidden" name="Form"
        tal:attributes="value view/doc/form/id" />
      <tal:block tal:replace="structure python:view.doc.display(edit=True)" />
      <input type="submit" i18n:attributes="value" value="Save" />
    </form>

  </metal:content-core>
</metal:main>

</body>
</html>

