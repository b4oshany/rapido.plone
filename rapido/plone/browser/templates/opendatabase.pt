<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="rapido.plone">
<body>

<metal:main fill-slot="content-core">
  <metal:content-core define-macro="content-core">

  <div ng-app="rapido" ng-controller="DatabaseCtrl"
    tal:attributes="
      rapido-api string:${view/db/url}/api;
      rapido-token context/@@authenticator/token;">
    <div ng-controller="MenuCtrl">
      <nav class="navbar navbar-default" role="navigation">
        <ul class="nav navbar-nav">
          <li ng-class="{'active': $root.state=='menu'}">
            <a ng-click="openMenu()"><span class="glyphicon glyphicon-home"></span></a>
          </li>
          <li ng-class="{'active': $root.state=='documents'}">
            <a ng-click="openView()"><span class="glyphicon glyphicon-th-list"></span> Documents</a>
          </li>
        </ul>
      </nav>
      <section ng-if="$root.state=='menu'">
        <h3>Forms</h3>
        <div class="btn-group-vertical">
          <a ng-repeat="form in forms" ng-click="openForm(form.id)" class="btn btn-info">{{ form.title }}</a>
        </div>
      </section>
    </div>
    <form ng-controller="FormCtrl"
      ng-if="$root.state=='form'"
      name="ngform"
      sf-model="model"
      sf-form="form"
      sf-layout="layout"
      sf-schema="schema"
      ng-submit="submitForm(ngform, model)">
    </form>
</div>

  </metal:content-core>
</metal:main>

</body>
</html>

